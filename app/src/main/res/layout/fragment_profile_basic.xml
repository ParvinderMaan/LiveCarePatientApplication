<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.view.ProfileBasicFragment"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:id="@+id/fl_root"
    android:layout_height="match_parent">
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        style="?android:attr/progressBarStyle" />
    <ScrollView
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:visibility="invisible"
        android:id="@+id/sv_main"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_content"
            android:paddingTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_first_name"
                android:paddingStart="@dimen/_8sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:enabled="false"
                android:maxLength="30"
                app:backgroundTint="#D3D3D3"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorLightBlack"
                android:textAppearance="@style/EditTextStyleI"
              />
            <androidx.appcompat.widget.AppCompatTextView
                android:text="Last Name"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_8sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                app:backgroundTint="#D3D3D3"
                android:enabled="false"
                android:singleLine="true"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:textColor="@color/colorLightBlack"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:text=""
                android:textAppearance="@style/EditTextStyleI"
               />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_date_of_birth"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:enabled="false"
                android:maxLength="30"
                android:focusable="false"
                android:cursorVisible="false"
                app:backgroundTint="#D3D3D3"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorLightBlack"
                android:textAppearance="@style/EditTextStyleI"
               />
            <androidx.appcompat.widget.AppCompatTextView
                android:text="Gender"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_8sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                app:backgroundTint="#D3D3D3"
                android:enabled="false"
                android:textColor="@color/colorLightBlack"
                android:maxLength="30"
                android:focusable="false"
                android:cursorVisible="false"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:textAppearance="@style/EditTextStyleI"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_country"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:maxLength="30"
                android:enabled="false"
                app:backgroundTint="#D3D3D3"
                android:focusable="false"
                android:cursorVisible="false"
                android:textColor="@color/colorLightBlack"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:textAppearance="@style/EditTextStyleI"
              />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_state"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:maxLength="30"
                android:enabled="false"
                android:focusable="false"
                android:cursorVisible="false"
                app:backgroundTint="#D3D3D3"
                android:textColor="@color/colorLightBlack"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:textAppearance="@style/EditTextStyleI"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_city"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:maxLength="30"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorLightBlack"
                android:enabled="false"
                app:backgroundTint="#D3D3D3"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:textAppearance="@style/EditTextStyleI"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_current_address"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_current_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textColor="@color/colorLightBlack"
                android:minLines="1"
                android:maxLines="3"
                app:backgroundTint="#D3D3D3"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:enabled="false"
                android:text=""
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
                android:imeOptions="actionNext"
                android:gravity="start"
                android:textAppearance="@style/EditTextStyleI"
               />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/title_email_"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:textColor="@color/colorGrey"
                    android:maxLength="30"
                    android:enabled="false"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text=""
                    app:backgroundTint="#D3D3D3"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textAppearance="@style/EditTextStyleI"
                   />
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/action_verify"
                    android:textSize="10sp"
                    android:id="@+id/tv_verify_email"
                    android:background="?android:selectableItemBackground"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_8sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorDarkRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Phone No"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorLightBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp_country"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoFormatNumber="true"
                    app:ccp_clickable="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    app:ccp_contentColor="@color/colorLightBlack"
                    app:ccpDialog_showNameCode="false"
                    app:ccp_padding="@dimen/_1sdp"
                    app:ccp_showArrow="true"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="12sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:layout_toRightOf="@+id/ccp_country"
                    android:imeOptions="actionDone"
                    android:textSize="14sp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textColor="@color/colorLightBlack"
                    android:background="@color/colorWhite"
                    android:inputType="phone"
                    android:padding="@dimen/_5sdp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/action_verify"
                    android:textSize="10sp"
                    android:id="@+id/tv_verify_phone_no"
                    android:background="?android:selectableItemBackground"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_8sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorDarkRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:background="#D3D3D3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_edit"
                style="@style/ButtonStyleI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingStart="@dimen/_30sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/action_edit"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorGreen"
                app:rippleColor="@color/colorWhite" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
